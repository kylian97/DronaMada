{% extends 'base.html.twig' %}

{% block title %}Valide ma commande - DronaMada{% endblock %}

{% block content %}
<div class="container"> 

<h2> Je passe ma commande </h2>
<p>Choisissez vos préférences avant de passera votre commande sur DronaMada</p>
<hr>

<div class="row">

    <div class="col-md-6">

    {% set formHtml %}

      {{form(form)}}

    {% endset %}

  {{formHtml|replace({'[br]' : '<br/>'})|raw}}
  {# replace c'est pour dire que tu me remplace sa par sa, et raw interprète le html #}


    </div>
    <div class="col-md-6">


    <div class="text-center">
      <b>Récap de ma commande </b> <br>
        {# {{dump(cart)}} #}
        <p>Retrouvez le récapitulatif de vos produits </p>
    </div>
        
        
<div class="order-summary">
  {% for key,product in cart %}

            <div class="row {% if key > 0 %} mt-2 {% endif%}">
              
              <div class="col-2"><img src="/uploads/{{product.product.illustration}}" alt="{{product.product.name}}" height="50px"> </div>
              <div class="col-8 my-auto">  <small>{{product.product.subtitle}} </small></div>
              <div class="col-2 my-auto"> x {{product.quantity}} </div>
          
            </div>
         
        {% endfor %}


    </div>
</div>

</div>

</div>
      


{% endblock %}