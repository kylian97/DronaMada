{% extends 'base.html.twig' %}

{% block title %}Nos Produits - DronaMada{% endblock %}

{% block content %}

  <style>
    body {
        color: white;
        
        font-weight: bold;
        }
  </style>

<section class="mt-4">

  <div class="container">

    <div class="row">

      <div class="col-md-3">
        <h3  class="colorGlacier" style="font-weight: bold;"> Filtre </h3>
          {{form(form)}}

      </div>
      <div class="col-md-9">
        <h3 class="colorGlacier" style="font-weight: bold;" >Nos Produits </h3>

        <div class="row product-container">

          {% for product in products %}

          <div class="col-md-4">
            
            <div class="product-item text-center card">

               <img class="product-image" src="/uploads/{{product.illustration}}"
                  alt="{{ product.name }}" class="img-fluid"> 

                  <hr style="background-color:#fff; padding: 0.5px; margin-top:0; opacity:1">

              <h5> {{ product.name }} </h5>
              
              {# <span class="product-subtitle"> {{product.subtitle}} </span> #}
              <span class="product-price" >{{(product.price / 100)|number_format(2, ',', '.') }} €</span>
              
              <a href="{{path('app_product', {'slug' : product.slug })}}">
                 <button class=" btn-sm btn-primary" style="font-weight:normal; border-radius: 10px; margin-top: 16px;">Voir Détail </button>
               </a>
            </div>


          </div>


          {% endfor %}

        </div>


      </div>


    </div>

</section>

{% endblock %}